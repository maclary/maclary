{
    "name": "maclary",
    "version": "0.1.0",
    "description": "Framework for making Discord bots a lot easier.",
    "author": "ApteryxXYZ",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js",
        "types": "./dist/index.d.ts"
    },
    "scripts": {
        "lint": "eslint src --fix",
        "format": "prettier --write {src,test}/**/*.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "docs": "typedoc",
        "clean": "rm -rf dist docs *.tgz",
        "build": "tsc && gen-esm-wrapper ./dist/index.js ./dist/index.mjs",
        "build:watch": "tsc --watch",
        "prepare": "husky install .github/husky"
    },
    "files": [
        "dist"
    ],
    "license": "MIT",
    "homepage": "https://github.com/maclary/maclary#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/maclary/maclary.git"
    },
    "bugs": {
        "url": "https://github.com/maclary/maclary/issues"
    },
    "engines": {
        "node": ">=16.9.0",
        "npm": ">=7.0.0"
    },
    "keywords": [
        "discord",
        "bot",
        "framework",
        "maclary"
    ],
    "dependencies": {
        "lexure": "^0.17.0",
        "twemoji-parser": "^14.0.0",
        "zod": "^3.14.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@jest/types": "^27.5.1",
        "@sapphire/eslint-config": "^4.3.2",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.23",
        "discord.js": "^14.0.0-dev.1650240532-9ef7ffd",
        "eslint": "^8.12.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-circus": "^27.5.1",
        "lint-staged": "^12.3.7",
        "prettier": "^2.6.1",
        "pretty-quick": "^3.1.3",
        "ts-jest": "^27.1.4",
        "typedoc": "^0.22.13",
        "typedoc-plugin-djs-links": "^1.0.4",
        "typedoc-plugin-extras": "^2.2.3",
        "typedoc-plugin-mdn-links": "^1.0.5",
        "typescript": "^4.6.3"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "build",
                    "chore",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "types"
                ]
            ]
        }
    },
    "lint-staged": {
        "src/*.ts": "eslint src --fix"
    }
}
